{
  "ci": {
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "render-blocking-resources": ["warn", {"maxLength": 1}]
      }
    },
    "collect": {
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": ["--disable-gpu", "--no-sandbox", "--no-zygote"],
        "configPath": ".github/lighthouse/desktop-config.js"
      }
    }
  }
}